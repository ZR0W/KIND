{
  "name": "KIND",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Keep It Non-Damaging",
  "homepage_url": "http://github.com/ZR0W/KIND",
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    
    "default_icon": {
      "16": "icons/get_started16.png",
      "32": "icons/get_started32.png",
      "48": "icons/get_started48.png",
      "128": "icons/get_started128.png"
    }, 
    "default_title": "KIND"
  },
  "icons": {
    "16": "icons/get_started16.png",
    "32": "icons/get_started32.png",
    "48": "icons/get_started48.png",
    "128": "icons/get_started128.png"
  },
  "permissions": ["activeTab",
    "declarativeContent",
    "storage", 
    "https://*/*",
    "http://*/*",
    "tabs"],
  "web_accessible_resources": ["src/my_inject_content.js", "src/modal.js", "css/mycss.css"],
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["src/content.js"]
    }
  ]
  
}