{
  "name": "KIND",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Keep It Non-Damaging",
  "homepage_url": "http://danharper.me",
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    
    "default_icon": {
      "16": "icons/get_started16.png",
      "32": "icons/get_started32.png",
      "48": "icons/get_started48.png",
      "128": "icons/get_started128.png"
    }, 
    "default_title": "KIND"
  },
  "icons": {
    "16": "icons/get_started16.png",
    "32": "icons/get_started32.png",
    "48": "icons/get_started48.png",
    "128": "icons/get_started128.png"
  },
  "permissions": ["activeTab",
    "declarativeContent",
    "storage", 
    "https://*/*",
    "http://*/*",
    "tabs"],
  "web_accessible_resources": ["src/my_inject_content.js"],
  "content_scripts": [
    { "run_at" :"document_end",
    "matches": ["<all_urls>"],
    "js": ["js/jquery-3.4.1.js","src/content.js"],
    "css":["css/mycss.css"] }
  ]
}